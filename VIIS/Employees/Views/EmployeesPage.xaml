<Page x:Class="VIIS.App.Employees.Views.EmployeesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VIIS.App.Employees.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="" Background="White">

    <Grid>
        <TabControl>
            <TabItem Header="Список сотрудников">
                <Frame Content="{Binding EmployeesList}"/>
            </TabItem>
            <TabItem Header="График работы">
                <Frame Content="{Binding WorkGraph}"/>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
