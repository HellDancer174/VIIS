<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VIIS.App.Employees.Views"
      xmlns:ViewModels="clr-namespace:VIIS.App.Employees.ViewModels" x:Class="VIIS.App.Employees.Views.EmployeesTabs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="" MinWidth="800" MinHeight="450">

    <Page.DataContext>
        <ViewModels:ViewEmployeesTabs/>
    </Page.DataContext>

    <Grid>
        <TabControl>
            <TabItem Header="Список сотрудников">
                <Frame Content="{Binding Employees, Mode=OneWay}"/>
            </TabItem>
            <TabItem Header="График работы">
                <Frame Content="{Binding Graph}"/>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
