<Page x:Class="VIIS.App.Finance.Views.FinanceTabs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VIIS.App.Finance.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FinanceTabs">

    <Grid>
        <TabControl>
            <TabItem Header="Финансы">
                <Frame Content="{Binding Finance, Mode=OneWay}"/>
            </TabItem>
            <TabItem Header="Заработная плата">
                <Frame Content="{Binding MasterCash, Mode=OneWay}"/>
            </TabItem>
            <TabItem Header="Начисление заработной платы">
                <Frame Content="{Binding AdditionalMasterCash, Mode=OneWay}"/>
            </TabItem>
        </TabControl>

    </Grid>
</Page>
